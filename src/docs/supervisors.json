{
  "paths": {
    "/api/v1/supervisors/profile": {
      "post": {
        "tags": ["Supervisors"],
        "summary": "Create supervisor profile",
        "description": "Create a detailed supervisor profile with professional license information",
        "operationId": "createSupervisorProfile",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["professionalLicenseNumber"],
                "properties": {
                  "professionalLicenseNumber": {
                    "type": "string",
                    "description": "Professional license number (must be unique)",
                    "example": "PSY12345",
                    "minLength": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Supervisor profile created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/ApiResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/Supervisor"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          },
          "403": {
            "description": "Only supervisors can create supervisor profiles",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          },
          "409": {
            "description": "Profile already exists or license number already registered",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Supervisors"],
        "summary": "Update supervisor profile",
        "description": "Update supervisor profile information",
        "operationId": "updateSupervisorProfile",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "professionalLicenseNumber": {
                    "type": "string",
                    "description": "Professional license number (must be unique)",
                    "example": "PSY54321",
                    "minLength": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Profile updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/ApiResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/Supervisor"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          },
          "404": {
            "description": "Supervisor profile not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          },
          "409": {
            "description": "License number already registered",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Supervisors"],
        "summary": "Delete supervisor profile",
        "description": "Delete the current supervisor's profile",
        "operationId": "deleteSupervisorProfile",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Profile deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse",
                  "example": {
                    "statusCode": 200,
                    "data": {},
                    "message": "Supervisor profile deleted successfully",
                    "success": true
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          },
          "404": {
            "description": "Supervisor profile not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          }
        }
      }
    },
    "/api/v1/supervisors/{id}": {
      "get": {
        "tags": ["Supervisors"],
        "summary": "Get supervisor by ID",
        "description": "Retrieve detailed information about a specific supervisor",
        "operationId": "getSupervisorById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Supervisor ID",
            "schema": {
              "type": "string",
              "example": "507f1f77bcf86cd799439011"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Supervisor retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/ApiResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/Supervisor"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Supervisor not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          }
        }
      }
    },
    "/api/v1/supervisors": {
      "get": {
        "tags": ["Supervisors"],
        "summary": "Get all supervisors",
        "description": "Retrieve a list of all supervisors with optional search and pagination",
        "operationId": "getAllSupervisors",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "description": "Search term for supervisor name, email, or license number",
            "schema": {
              "type": "string",
              "example": "john"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number for pagination",
            "schema": {
              "type": "integer",
              "default": 1,
              "minimum": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of supervisors per page (max 50)",
            "schema": {
              "type": "integer",
              "default": 10,
              "minimum": 1,
              "maximum": 50
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Supervisors retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/ApiResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "object",
                          "properties": {
                            "supervisors": {
                              "type": "array",
                              "items": { "$ref": "#/components/schemas/Supervisor" }
                            },
                            "pagination": {
                              "type": "object",
                              "properties": {
                                "currentPage": {
                                  "type": "integer",
                                  "example": 1
                                },
                                "totalPages": {
                                  "type": "integer",
                                  "example": 3
                                },
                                "totalSupervisors": {
                                  "type": "integer",
                                  "example": 25
                                },
                                "hasMore": {
                                  "type": "boolean",
                                  "example": true
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/supervisors/me": {
      "get": {
        "tags": ["Supervisors"],
        "summary": "Get current supervisor profile",
        "description": "Retrieve the currently authenticated supervisor's profile",
        "operationId": "getMyProfile",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Profile retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/ApiResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/Supervisor"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          },
          "404": {
            "description": "Supervisor profile not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          }
        }
      }
    },
    "/api/v1/supervisors/students/{studentId}": {
      "post": {
        "tags": ["Supervisors"],
        "summary": "Add student to supervision",
        "description": "Add a student therapist to the supervisor's supervision list",
        "operationId": "addStudentToSupervision",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "studentId",
            "in": "path",
            "required": true,
            "description": "Student therapist user ID",
            "schema": {
              "type": "string",
              "example": "507f1f77bcf86cd799439011"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Student added to supervision successfully",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/ApiResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/Supervisor"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          },
          "404": {
            "description": "Supervisor profile not found or student therapist not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          },
          "409": {
            "description": "Student is already under supervision",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Supervisors"],
        "summary": "Remove student from supervision",
        "description": "Remove a student therapist from the supervisor's supervision list",
        "operationId": "removeStudentFromSupervision",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "studentId",
            "in": "path",
            "required": true,
            "description": "Student therapist user ID",
            "schema": {
              "type": "string",
              "example": "507f1f77bcf86cd799439011"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Student removed from supervision successfully",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    { "$ref": "#/components/schemas/ApiResponse" },
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/Supervisor"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          },
          "404": {
            "description": "Supervisor profile not found or student not under supervision",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Supervisor": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "507f1f77bcf86cd799439011"
          },
          "userId": {
            "allOf": [
              { "$ref": "#/components/schemas/User" },
              {
                "description": "User information for the supervisor"
              }
            ]
          },
          "professionalLicenseNumber": {
            "type": "string",
            "description": "Professional license number",
            "example": "PSY12345"
          },
          "supervisedStudents": {
            "type": "array",
            "description": "List of student therapists under supervision",
            "items": {
              "type": "object",
              "properties": {
                "_id": {
                  "type": "string",
                  "example": "507f1f77bcf86cd799439012"
                },
                "fullName": {
                  "type": "string",
                  "example": "Jane Smith"
                },
                "email": {
                  "type": "string",
                  "format": "email",
                  "example": "jane.smith@example.com"
                }
              }
            }
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2023-11-14T10:30:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2023-11-14T10:30:00.000Z"
          }
        },
        "required": ["_id", "userId", "professionalLicenseNumber", "supervisedStudents", "createdAt", "updatedAt"]
      }
    }
  }
}