              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponse" }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          }
        }
      }
    },
    "/api/v1/therapists/qualifications": {
      "put": {
        "tags": ["Therapists"],
        "summary": "Update qualifications",
        "description": "Update therapist's qualifications",
        "operationId": "updateQualifications",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["qualifications"],
                "properties": {
                  "qualifications": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "example": ["PhD in Clinical Psychology", "Licensed Therapist", "CBT Certified"]
