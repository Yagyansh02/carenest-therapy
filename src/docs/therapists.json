            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiError" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Therapist": {
        "allOf": [
          { "$ref": "#/components/schemas/User" },
          {
            "type": "object",
            "properties": {
              "specializations": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "example": ["anxiety", "depression", "trauma"]
              },
              "qualifications": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "example": ["PhD in Clinical Psychology", "Licensed Therapist"]
              },
              "experience": {
                "type": "integer",
                "example": 5,
                "description": "Years of experience"
              },
              "bio": {
                "type": "string",
                "example": "Experienced therapist specializing in CBT..."
              },
              "availability": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "day": {
                      "type": "string",
                      "example": "Monday"
                    },
                    "slots": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "example": ["09:00-10:00", "14:00-15:00"]
                    }
                  }
                }
              }
            }
          }
        ]
      }
    }
  }
}
